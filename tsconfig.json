{
  "compilerOptions": {
    "lib": ["es2018"],
    "rootDirs": ["tests", "src"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "src",
  },
  "include": [
    "src/**/*.ts",
    ".env",
    ".env.*",
    "tests/**/*.ts",
    "index.js",
  ],
  "exclude": [
    "*.config.js",
    "node_modules",
    "ecosystem.config.js",
  ]
}
