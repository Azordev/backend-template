{
  "name": "azordev-backend",
  "version": "0.1.0",
  "description": "Template for backends with NodeJS + Express, ready to use in production!",
  "main": "index.js",
  "scripts": {
    "start": "pm2-runtime start ./ecosystem.config.js --env production",
    "build": "tsc -p .",
    "dev": "NODE_ENV=development tsnd --respawn -r tsconfig-paths/register -r dotenv/config src/server/index.ts",
    "dev:dash": "NODE_ENV=development nodejs-dashboard -- ts-node-dev -r tsconfig-paths/register -r dotenv/config -r nodejs-dashboard src/server/index.ts",
    "preinstall": "chmod +x ./.create_keys.sh && ./.create_keys.sh",
    "postinstall": "npm run lefthook && npm run build",
    "test:watch": "jest --watch -w=100%",
    "lint": "eslint src --ext .js,.ts --color --cache -f table",
    "lint-fix": "eslint src --fix src/**/*.ts",
    "spelling": "cspell lint 'src/**/*.{js,ts,md}'",
    "spelling:ci": "cspell run",
    "eslint": "eslint src --color --cache -f table",
    "eslint:ci": "eslint --color --cache -f table",
    "lint:js:fix": "eslint src --fix",
    "prettier": "prettier src  --write --config ./.prettierrc.js",
    "prettier:ci": "prettier  --write --config ./.prettierrc.js",
    "test": "jest --passWithNoTests --coverage -w=100%",
    "test:c": "jest --coverage --watchAll=false --ci --passWithNoTests",
    "test:cw": "jest --coverage --watchAll",
    "check": "npm run eslint && npm run prettier && npm run test:c",
    "lefthook": "lefthook run lint"
  },
  "dependencies": {
    "bcryptjs": "~2.4.3",
    "body-parser": "~1.19.1",
    "compression": "~1.7.4",
    "cors": "~2.8.5",
    "errorhandler": "~1.5.1",
    "express": "~4.17.2",
    "express-jwt": "~6.1.0",
    "express-rate-limit": "~6.2.0",
    "express-validator": "~6.14.0",
    "helmet": "~5.0.2",
    "http-status-codes": "~2.2.0",
    "jsonwebtoken": "~8.5.1",
    "memory-cache": "~0.2.0",
    "method-override": "~3.0.0",
    "morgan": "~1.10.0",
    "response-time": "~2.3.2",
    "winston": "~3.5.1"
  },
  "devDependencies": {
    "@arkweid/lefthook": "~0.7.7",
    "@commitlint/cli": "~16.1.0",
    "@commitlint/config-conventional": "~16.0.0",
    "@types/body-parser": "~1.19.2",
    "@types/cors": "~2.8.12",
    "@types/express": "~4.17.13",
    "@types/jest": "~27.4.0",
    "@types/node": "~17.0.13",
    "@types/supertest": "~2.0.11",
    "@typescript-eslint/eslint-plugin": "~4.29.2",
    "@typescript-eslint/parser": "~4.29.2",
    "cspell": "~5.18.0",
    "dotenv": "~15.0.0",
    "eslint": "~7.32.0",
    "eslint-config-nfour": "~2.2.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-config-standard": "~16.0.3",
    "eslint-plugin-import": "~2.24.0",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-prettier": "~3.4.0",
    "eslint-plugin-promise": "~5.1.0",
    "jest": "~27.4.7",
    "nodejs-dashboard": "~0.5.1",
    "pm2": "~5.1.2",
    "prettier": "~2.3.2",
    "supertest": "~6.2.2",
    "ts-jest": "~27.1.3",
    "ts-node": "~10.4.0",
    "ts-node-dev": "~1.1.8",
    "typescript": "~4.5.5"
  },
  "engines": {
    "node": ">=16.13.2"
  },
  "private": true,
  "keywords": [
    "nodejs",
    "expressjs",
    "backend",
    "eslint",
    "middlewares",
    "API",
    "pm2",
    "vscode"
  ],
  "author": {
